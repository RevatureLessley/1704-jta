<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- One optional property I want to provide -->
		<property name="hibernate.show_sql">false</property>
		
		
		<property name="hibernate.cache.use_second_level_cache">true</property>


		<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
		
		
		<property name="net.sf.ehcache.configurationResourceName">/ehcache.xml</property>

		<!-- For hbm.xml files, use the attribute 'resource' -->
		<mapping resource="com/revature/hibernate/entity/Employee.hbm.xml"></mapping>

		<!-- For annotated files, use the attribute 'class' -->
		<mapping class="com.revature.hibernate.entity.Pokemon"></mapping>
		<mapping class="com.revature.hibernate.entity.Trainer"></mapping>
		<mapping class="com.revature.hibernate.entity.Address"></mapping>
	</session-factory>
</hibernate-configuration>